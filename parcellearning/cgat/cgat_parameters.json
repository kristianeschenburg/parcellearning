{
  "model": "CGAT",

  "data": {
    "in": "/projects3/parcellation/",
    "out": "/projects3/parcellation/models/cgat/medialtemporal/",
    "training": "/projects3/parcellation/data/regional/medialtemporal/training.bin",
    "validation": "/projects3/parcellation/data/regional/medialtemporal/validation.bin",
    "testing": "/projects3/parcellation/data/regional/medialtemporal/testing.bin"
  },
  
  "features": ["regionalized", 
                "spectral", 
                "curv", 
                "myelin", 
                "sulcal"],

  "model_parameters": {
      "in_dim": 80,
      "num_classes": 181,
      "num_heads": [8,8],
      "num_layers": 3,
      "num_hidden": 32,
      "residual": "False",
      "feat_drop": 0.1,
      "negative_slope": 0.2,
      "activation": "torch.nn.functional.leaky_relu",
      "top_k": 3,
      "graph_margin": 0.1,
      "class_margin": 0.1,
      "allow_zero_in_degree": "True"
  },

  "optimizer_parameters": {
    "lr": 0.005,
    "weight_decay": 5e-4
  },

  "loss_parameters": {
      "graph_mu": 0.1,
      "class_mu": 1
  },

  "training_parameters": {
    "epochs": 600,
    "n_batch": 4,
    "verbose": "False"
  },

  "stopping_parameters": {
    "mode": "lower",
    "patience": 30
  }
}